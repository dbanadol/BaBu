<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.constraint.Guideline
        android:id="@+id/guideline_represents_song_name_bar2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_end="104dp" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline_represents_training_tabs2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="96dp" />

    <TextView
        android:id="@+id/past7"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginBottom="20dp"
        android:text="Average Heart Rate (BPM) :"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/guideline_represents_song_name_bar2"
        app:layout_constraintEnd_toStartOf="@+id/avg_hr_"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        tools:visibility="invisible" />

    <TextView
        android:id="@+id/avg_hr_"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="0"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/past7"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/past7"
        tools:visibility="invisible" />

    <TextView
        android:id="@+id/past6"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="Max. Heart Rate (BPM) :"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/past7"
        app:layout_constraintEnd_toStartOf="@+id/max_hr_"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        tools:visibility="invisible" />

    <TextView
        android:id="@+id/max_hr_"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="0"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/past6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/past6"
        tools:visibility="invisible" />

    <TextView
        android:id="@+id/past5"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginBottom="18dp"
        android:text="Average Speed (km/h) :"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/past6"
        app:layout_constraintEnd_toStartOf="@+id/average_speed_"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        tools:visibility="invisible" />

    <TextView
        android:id="@+id/average_speed_"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="0"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/past5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/past5"
        tools:visibility="invisible" />

    <TextView
        android:id="@+id/past4"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="Top Speed (km/h) :"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/past5"
        app:layout_constraintEnd_toStartOf="@+id/top_speed_"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        tools:visibility="invisible" />

    <TextView
        android:id="@+id/top_speed_"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="0"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/past4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/past4"
        tools:visibility="invisible" />

    <TextView
        android:id="@+id/past3"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="Distance Covered (km) :"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/past4"
        app:layout_constraintEnd_toStartOf="@+id/distance_"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        tools:visibility="invisible" />

    <TextView
        android:id="@+id/distance_"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="0"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/past3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/past3"
        tools:visibility="invisible" />

    <TextView
        android:id="@+id/past1"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="Date :"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/past2"
        app:layout_constraintEnd_toStartOf="@+id/date"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        tools:visibility="invisible" />

    <TextView
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="0"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/past1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/past1"
        tools:visibility="invisible" />

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="wrap_content"
        android:layout_height="38dp"
        android:layout_marginTop="10dp"
        android:background="?attr/colorButtonNormal"
        android:gravity="center"
        android:persistentDrawingCache="scrolling"
        android:popupBackground="?attr/colorButtonNormal"

        android:textAlignment="center"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline_represents_training_tabs2"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/past2"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginBottom="18dp"
        android:text="Total Time (mins) :"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/past3"
        app:layout_constraintEnd_toStartOf="@+id/time_"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        tools:visibility="invisible" />

    <TextView
        android:id="@+id/time_"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="0"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/past2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/past2"
        tools:visibility="invisible" />

    <TextView
        android:id="@+id/warning2"
        android:layout_width="0dp"
        android:layout_height="102dp"
        android:layout_marginTop="10dp"
        android:text="No Past Activity is Found!"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline_represents_training_tabs2" />


</android.support.constraint.ConstraintLayout>